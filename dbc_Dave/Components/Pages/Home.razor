<header class="site-header py-1">
    <nav class="container d-flex flex-column flex-md-row justify-content-between">
        <div class="order-2 order-md-1 align-middle" style="margin-top:65px;">
            <NavLink class="py-2 btn register-button"
                     id="register"
                     href="Account/Register">
                Register
            </NavLink>
            <NavLink class="py-2 btn login-button"
                     id="login"
                     href="Account/Login?ReturnUrl=%2Fdave">
                Login
            </NavLink>
        </div>
